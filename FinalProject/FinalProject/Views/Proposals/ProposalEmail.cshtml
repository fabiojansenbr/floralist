@model FinalProject.Models.Proposal

@{
    Layout = null;
}

<p>
    Hello @Model.Customer.Name!
</p>
<p>
    It was nice meeting you and learning about your beautiful vision for this very special event. I'm excited for the opportunity to being a part of it! Please let me know what feedback you have for me once you get the chance to review the below proposal. 
</p>
<p>
    Thanks,
    <br />
    @Model.Designer.Name
</p>

<table>
    <thead>
        <tr>

            <th style="background-color:lightgrey;font-family:Arial, Helvetica, sans-serif;text-align:center; border-radius:10px; height:200px;">
                <h1 class="display-4 text-center">@Model.Title</h1>
                <p class="lead text-center">@Model.Description</p>
            </th>

        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <table>
                    @for (int i = 0; i < Model.ProposalItems.Count; i++)
                    {
                        <tr>

                            @for (int ii = 0; ii < 4; ii++)
                            {
                                <td style="width: 250px;height: 250px; margin:0 5px 5px 5px;object-fit: cover;background-color:blue;"></td>

                            }
                        </tr>

                    }


                </table>
            </td>
        </tr>

    </tbody>


    @*<img style="width: 100%;height: 250px;object-fit: cover;" src="https://floralist.azurewebsites.net/Images/Raw/@item.Image.Id" alt="@item.Caption" />*@


</table>

